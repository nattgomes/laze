{% extends 'index.jinja2' %} {% block content %}

<div class="col-sm-12">

    <div class="content mt-3" id="tabela">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">{{title}}</strong>
              </div>
              <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                  <thead>
                    <th> {{ fields[0] }} </th>
                    <th> {{ fields[1] }} </th>
                    <th> {{ fields[2] }} </th>
                    <th> {{ fields[3] }} </th>
                    <th> {{ fields[4] }} </th>
                    <th> {{ fields[5] }} </th>
                    <th> {{ fields[6] }} </th>
                    <th> {{ fields[7] }} </th>
                  </thead>

                  <tbody>
                    {% for value in values %}
                    <tr>
                      <td>{{loop.index}}</td>
                      <td>{{ value[0] }}</td>
                      <td>{{ value[1] }}</td>
                      <td>{{ value[2] }}</td>
                      <td>{{ value[3] }}</td>
                      <td>{{ value[4] }}</td>
                      <td>{{ value[5] }}</td>
                      <td>{{ value[6] }}</td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      $(document).ready(function(){
          $('#bootstrap-data-table').dataTable({
              "language": {
                  "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
              }
          });
      });

    </script>

    {% endblock %}
