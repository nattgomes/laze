{% extends 'index.jinja2' %} {% block content %}

<div class="col-sm-12">
  <form class="formulario_signup" action="/newUser" method="post" enctype="multipart/form-data">
    <div class="container">
      <p class="notification"> ATENÇÃO: Este formulário destina-se ao cadastro de novo usuário. Para atribuição de perfil para o mesmo, acesse o menu "Gerenciar perfis".
      {% if db_error %}
      </br></br>
      <span style="color: red; display:inline-block">{{db_error}}</span>
      {% endif %}
      </p>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name">Nome</label>
          <input type="text" id="name"  name="name" onchange="validate_name()" class="form-control" placeholder="Ex.: João" value="{{ name }}">
          <span class="errorName">Este campo é obrigatório!</span>
        </div>
        <div class="form-group col-md-6" >
          <label for="name">Sobrenome</label>
          <input type="text" id="lastname" name="lastname" onchange="validate_lastname()" class="form-control" placeholder="Ex.: da Silva" value="{{ lastname }}">
          <span class="errorLastName">Este campo é obrigatório!</span>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name">CPF</label>
          <input type="text" id="cpf" name="cpf" onchange="validate_cpf()" class="form-control" placeholder="Digite sem pontos ou travessão" value="{{ cpf }}">
          <span class="errorCPF">Este campo é obrigatório!</span>
        </div>
        <div class="form-group col-md-6">
          <label for="name">Telefone</label>
          <input type="text" id="phone"  name="phone" onchange="validate_phone()" class="form-control" placeholder="Ex.: 999123456" value="{{ phone }}">
          <span class="errorPhone">Este campo é obrigatório!</span>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="formGroupInput" class="name_input">Usuário</label>
          <input type="text" id="username"  name="username" onchange="validate_username()" class="form-control" placeholder="Digite o nome de usuário" value="{{ usr_name }}" />
          <span class="errorUser">Este campo é obrigatório!</span>
        </div>
        <div class="form-group col-md-6">
          <label for="formGroupInput">Email</label>
          <input type="text" id="email"  name="email" onchange="validate_email()" class="form-control" placeholder="Digite seu e-mail" value="{{ email }}"/>
          <span class="errorEmail">Este campo é obrigatório!</span>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="formGroupInput">Senha</label>
          <input type="password" id="password" name="password" onchange="validate_password()" class="form-control" placeholder="Digite sua senha" />
          <span class="errorPassword">Este campo é obrigatório!</span>
        </div>
        <div class="form-group col-md-6">
          <label for="formGroupInput">Confirmação de senha</label>
          <input type="password" id="verify" name="verify"  onkeyup="validate_verify()" class="form-control" placeholder="Redigite sua senha" />
          <span class="errorVerify">Este campo é obrigatório!</span>
        </div>
      </div>
      <span id="signup_span">
        <button id="signup_btn" class="btn_laze" type="submit" disabled="disabled" >Criar cadastro</button></br>
      </span>

    </div>
  </form>
</div>

{% endblock %}
